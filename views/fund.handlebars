

<link rel="stylesheet" href="/public/css/main.css">
<div class="row">
    <div class="col-75">
        <div class="container">
            <form name="form1" method="post" onsubmit="finalcardnumber(document.form1.cardnumber,document.form1.ctype)">



                <div class="col-50">
                    <h3>Payment</h3>
                    <div class="row">
                        <br>
                        <div class="col-50">
                            <label for="fname">Accepted Cards</label>
                            <div class="icon-container">
                                <i class="fa fa-cc-visa" style="color:navy;"></i>
                                <i class="fa fa-cc-amex" style="color:blue;"></i>
                                <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                <i class="fa fa-cc-discover" style="color:orange;"></i>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-50">
                            <label for="ctype"> Card Type </label>
                            <select required="required" name="ctype" id="ctype">
                                <option value="" disabled selected> Select card type </option>
                                <option value="01" name="VISA">VISA</option>
                                <option value="02" name="02">AMERICAN EXPRESS</option>
                                <option value="03" name="03">MASTERCARD</option>
                                <option value="04" name="04">DISCOVER</option>
                            </select>
                            <br><br>
                        </div>
                        <div class="col-50">
                            <b>
                                <label for="balamt">Funding Amount (in USD)</label>
                            </b>
                            <input type="number" id="funamt" name="funamot" value="10">
                            <br>

                        </div>
                    </div>

                    <label for="cname">Name on Card</label>
                    <input type="text" autocomplete="on" required="required" id="cname" name="cardname" placeholder="Enter the name on the card here">
                    <label for="ccnum">Credit card number</label>
                    <input type="text" autocomplete="on" required="required" id="ccnum" name="cardnumber" placeholder="Enter your card number here" maxlength=19>


                    <div class="row">
                        <div class="col-50">
                            <label for="expyear">Expiry Month and Expiry year</label>
                            <input type="month" id="expyear" name="expyear" placeholder="Enter the expiry year here" autocomplete="off" required="required" maxlength=4>
                        </div>


                        <div class="col-50">
                            <label for="cvv">CVV</label>
                            <input type="text" id="cvv" name="cvv" required="required" autocomplete="off" placeholder="Enter your CVV here." maxlength=4>
                        </div>
                    </div>

                    <input type="submit" value="Submit" class="btn">

            </form>
            <span></span>

        </div>
    </div>

</div>
<script src="public/js/validation.js"></script>
